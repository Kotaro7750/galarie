{
  "name": "Galarie Devcontainer",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "remoteUser": "galarie",
  "forwardPorts": [8080, 5173, 4317, 3300, 9090, 3100, 3200],
  "postCreateCommand": "cargo --version && rustc --version && node --version && npm --version",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
